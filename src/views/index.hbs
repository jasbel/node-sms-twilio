<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" class="card card-body" method="POST">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write your message" autofocus value="{{name}} esta es una prueba, porfa confirmame que te llego el SMS. Atte: Asbel">
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+5914646465" autocomplete=false value="{{ defaultPhone}}">
            </div>
            <button class="btn btn-primary btn-block">
                Send
            </button>
        </form>
    </div>
    <div class="col-md-8">

        {{#if messages}}
            <h4>List Messages</h4>
            <ul id="messages" class="list-group" style="height: 70vh; overflow-y: auto;">
                {{#each messages}}
                    <li class="list-group-item list-group-item-info list-group-item-action">
                        <p>Body :{{Body}}</p>
                        {{!-- <span>{{hideNumber To}}</span> --}}
                        <p>ID: {{_id}}</p>
                        {{#if To}}
                            <span>To: {{To}}</span>
                        {{/if}}
                        {{#if From}}
                            <span>From: {{From}}</span>
                        {{/if}}
                        <p>{{timeago createdAt}}</p>

                    </li>
                {{/each}}
            </ul>
        {{else messages}}
            <p>No messages Yet</p>
        {{/if}}
    </div>
</div>